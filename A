#include <iostream>
using namespace std;

void sortArray(int arr[], int size) {
    for (int i = 0; i < size - 1; i++) {
        for (int j = 0; j < size - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

int main() {
    int n, m;
    cin >> n >> m;
    int size = n * m;
    int flat_list[size];

    for (int i = 0; i < size; i++) {
        cin >> flat_list[i];
    }

    sortArray(flat_list, size);

    int result[size];
    int left = 0, right = size - 1, index = 0;

    while (left <= right) {
        if (right >= left) {
            result[index++] = flat_list[right--];
        }
        if (left <= right) {
            result[index++] = flat_list[left++];
        }
    }

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            cout << result[i * m + j] << " ";
        }
        cout << endl;
    }

    return 0;
}
